<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_view_contents4"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/text_view_contents6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_itemName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="New item's name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_itemQty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="New item's quantity"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/date_header" />
        <Spinner
            android:id="@+id/sp_itemTag"
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <EditText
            android:id="@+id/et_itemDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="New item's date obtained"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_itemDesc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="top"
            android:hint="New item's description"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_push"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="4dp"
                app:srcCompat="@drawable/back_one" />

            <ImageView
                android:id="@+id/btn_Push"
                android:layout_width="195dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="7dp"
                android:layout_marginBottom="-2dp"
                app:srcCompat="@drawable/confirm_one" />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>